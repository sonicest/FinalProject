<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/landingBackgroundCenter</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullScreen" parent="Theme.FinalProject">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:background">@color/secondaryText</item>
    </style>

</resources>